rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow read for authenticated users (needed for leaderboard)
    // but write only for own profile
    match /users/{userId} {
      allow read: if request.auth != null; // Allow authenticated users to read all profiles for leaderboard
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Duels collection - users can read/write duels they participate in
    match /duels/{duelId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.player1Id ||
         request.auth.uid == resource.data.player2Id);
      // Also allow creating new duels for authenticated users
      allow create: if request.auth != null;
    }
  }
}
